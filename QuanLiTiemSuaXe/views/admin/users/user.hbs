<style>
    .user-avatar {
        width: 45px;
        height: 45px;
        object-fit: cover;
        border: 2px solid #eee;
    }
    .table td {
        padding: 15px 10px !important;
    }
    .badge-role {
        padding: 6px 12px;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.75rem;
    }
    .action-btns .btn {
        margin: 0 2px;
        border-radius: 8px;
    }
    /* Hiệu ứng hover cho dòng trong bảng */
    #userTable tr:hover {
        background-color: #f8f9fa;
        transition: 0.3s;
    }
</style>

<div class="content-wrapper">
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="page-title" style="font-size: 1.8rem; font-weight: 700;">Quản lý User</h1>
        </div>
    </div>

    <div class="row mb-4 align-items-center">
        <div class="col-md-8 col-lg-9">
            <div class="input-group shadow-sm">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="lni lni-search-alt text-muted"></i>
                    </span>
                <input type="text" id="userSearch" class="form-control border-start-0 ps-0"
                       placeholder="">
            </div>
        </div>
        <div class="col-md-4 col-lg-3 text-end">
            <a href="/admin/users/create" class="btn btn-primary w-100 shadow-sm py-2">
                <i class="lni lni-plus me-2"></i> Thêm Tài khoản
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4">Thành viên</th>
                        <th>Email liên hệ</th>
                        <th>Quyền truy cập</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                    </thead>
                    <tbody id="userTable">
                    {{#each users}}
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <img src="{{#if this.avatarUrl}}{{this.avatarUrl}}{{else}}/images/faces/hoa.jpg{{/if}}"
                                         class="rounded-circle user-avatar me-3 shadow-sm">
                                    <div>
                                        <div class="fw-bold text-dark">{{this.lastName}} {{this.firstName}}</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-muted"><i class="lni lni-envelope me-2"></i>{{this.email}}</span>
                            </td>
                            <td>
                                {{#ifEquals this.role 'admin'}}
                                    <span class="badge badge-role bg-soft-danger text-danger border border-danger">
                                        <i class="lni lni-shield me-1"></i> Quản trị
                                    </span>
                                {{else}}
                                    <span class="badge badge-role bg-soft-info text-info border border-info">
                                        <i class="lni lni-user me-1"></i> Khách hàng
                                    </span>
                                {{/ifEquals}}
                            </td>
                            <td class="text-center action-btns">
                                <a href="/admin/users/edit/{{this._id}}" class="btn btn-sm btn-outline-primary" title="Sửa thông tin">
                                    <i class="lni lni-pencil"></i> Sửa
                                </a>
                                <form action="/admin/users/delete/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Hành động này không thể hoàn tác. Bạn có chắc chắn muốn xóa người dùng này?')"
                                            title="Xóa tài khoản">
                                        <i class="lni lni-trash"></i>Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    // Xử lý tìm kiếm tức thì
    document.getElementById('userSearch').addEventListener('keyup', function() {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll('#userTable tr');

        rows.forEach(row => {
            let name = row.cells[0].innerText.toLowerCase();
            let email = row.cells[1].innerText.toLowerCase();
            if (name.includes(filter) || email.includes(filter)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    });
</script>