<div class="content-wrapper">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="page-title">Chỉnh sửa Quyền Người dùng</h1>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form action="/admin/users/edit/{{userEdit._id}}" method="POST">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Họ</label>
                        <input type="text" name="lastName" class="form-control" value="{{userEdit.lastName}}" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Tên</label>
                        <input type="text" name="firstName" class="form-control" value="{{userEdit.firstName}}" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email (Không thể sửa)</label>
                    <input type="email" class="form-control" value="{{userEdit.email}}" disabled>
                </div>

                <div class="mb-4">
                    <label class="form-label">Vai trò (Role)</label>
                    <select name="role" class="form-select form-control">
                        <option value="customer" {{#ifEquals userEdit.role 'customer'}}selected{{/ifEquals}}>Khách hàng (Customer)</option>
                        <option value="admin" {{#ifEquals userEdit.role 'admin'}}selected{{/ifEquals}}>Quản trị viên (Admin)</option>
                    </select>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    <a href="/admin/users" class="btn btn-light">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>