<div class="content-wrapper">
    <div class="page-content-wrapper">
        <div class="card shadow-sm mb-4" id="printableArea">
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-sm-6">
                        <h4 class="text-primary">TIỆM SỬA XE CHUYÊN NGHIỆP</h4>
                        <p>Địa chỉ: 08 Đường Chu Văn An,Ấp Bà Chủ ,xã Tân Lân,Tây Ninh</p>
                        <p>Điện thoại: 0364700601</p>
                    </div>
                    <div class="col-sm-6 text-sm-end">
                        <h4>HÓA ĐƠN CHI TIẾT</h4>
                        <p class="mb-0">Ngày tạo: {{formatDate hoadon.ngaytaohd "DD/MM/YYYY"}}</p>
                        <p>Trạng thái: <strong>{{hoadon.trangthaihd}}</strong></p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="border-bottom pb-2">Thông tin khách hàng</h5>
                        <p class="mb-1">Khách hàng: <strong>{{hoadon.namekh}}</strong></p>
                        <p class="mb-1">Số điện thoại: {{hoadon.sdtkh}}</p>
                        <p class="mb-1">Loại xe: {{hoadon.loaixe}}</p>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light text-center">
                        <tr>
                            <th>Nội dung </th>
                            <th style="width: 200px;">Đơn giá</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each hoadon.dichvus}}
                            <tr>
                                <td class="ps-4">Dịch vụ: {{this.namedv}}</td>
                                <td class="text-center">{{formatCurrency this.giadv}}</td>
                            </tr>
                        {{/each}}

                        {{#each hoadon.sanphams}}
                            <tr>
                                <td class="ps-4">Phụ tùng : {{this.namesp}}</td>
                                <td class="text-center">{{formatCurrency this.giasp}}</td>
                            </tr>
                        {{/each}}

                        {{!-- Nếu cả 2 mảng đều trống --}}
                        {{#if (and (not (length hoadon.dichvus)) (not (length hoadon.sanphams)))}}
                            <tr>
                                <td colspan="2" class="text-center text-muted">Danh sách trống</td>
                            </tr>
                        {{/if}}
                        </tbody>
                        <tfoot>
                        <tr class="h4">
                            <th class="text-end pe-5">TỔNG CỘNG:</th>
                            <th class="text-center text-danger">{{formatCurrency hoadon.tienhd}}</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2 no-print">
            <button onclick="window.print()" class="btn btn-success">
                <i class="lni lni-printer"></i> In Hóa Đơn
            </button>
            <a href="/admin/hoadon/hoadon" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('print') === 'true') {
            setTimeout(() => {
                window.print(); // Tự động mở hộp thoại in

                // Xóa tham số ?print=true trên thanh địa chỉ để không bị in lại khi F5
                const cleanUrl = window.location.origin + window.location.pathname;
                window.history.replaceState({}, document.title, cleanUrl);
            }, 500);
        }
    });
</script>
<style>
    /* CSS hiển thị bình thường */
    .no-print { display: block; }

    @media print {
        /*  ẩn các thành phần k cần thiết */
        .sidebar-wrapper,
        #sidebar-wrapper,
        .sidebar-offcanvas,
        .left-sidebar,
        .top-header,
        .no-print,
        header,
        footer,
        .nav-container,
        .sidebar-header {
            display: none !important;
            visibility: hidden !important;
            width: 0 !important;
        }

        /* 2. Cực kỳ quan trọng: Ép lề trái về 0 để nội dung không bị đẩy sang phải */
        .page-wrapper,
        .page-content,
        .page-content-wrapper,
        .content-wrapper,
        body {
            margin-left: 0 !important;
            padding-left: 0 !important;
            margin: 0 !important;
            padding: 0 !important;
            width: 100% !important;
            left: 0 !important;
            position: relative !important;
        }

        /* 3. Làm sạch Card để trông như một tờ giấy trắng */
        .card {
            border: none !important;
            box-shadow: none !important;
            margin: 0 !important;
            padding: 0 !important;
        }

        /* 4. Đảm bảo bảng hiển thị rõ nét */
        .table {
            width: 100% !important;
            border: 1px solid #000 !important;
        }

        /* Ẩn thanh cuộn nếu có */
        body {
            overflow: visible !important;
        }
    }
</style>