<div class="content-wrapper">
    <div class="page-content-wrapper">

        <div class="row mb-4">
            <div class="col-lg-12 d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="page-title">Quản lý Hóa Đơn</h1>
                    <p class="page-subtitle">Tạo và xem lịch sử hóa đơn sửa chữa.</p>
                </div>
                <div>
                    <a href="/admin/hoadon/hoadonCreate" class="btn btn-primary">
                        <i class="lni lni-plus me-2"></i> Tạo Hóa Đơn Mới
                    </a>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="invoiceTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="all-tab" data-bs-toggle="tab" href="#tab-all" role="tab">Tất Cả</a>
                    </li>
                </ul>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                        <tr>
                            <th scope="col">Khách Hàng</th>
                            <th scope="col">Ngày Tạo</th>
                            <th scope="col">Tổng Tiền</th>
                            <th scope="col">Trạng Thái</th>
                            <th scope="col">Hành Động</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each hoadons}}
                            <tr>
                                <td><strong>{{namekh}}</strong></td>
                                <td>{{formatDate ngaytaohd "DD/MM/YYYY"}}</td>
                                <td><strong>{{formatCurrency tienhd}}</strong></td>
                                <td>
                                    {{#ifEquals trangthaihd "Đã thanh toán"}}
                                        <span class="badge bg-success" style="min-width: 130px;">Đã Thanh Toán</span>
                                    {{else}}
                                        {{#ifEquals trangthaihd "Đã hủy"}}
                                            <span class="badge bg-danger" style="min-width: 130px;">Đã Hủy</span>
                                        {{else}}
                                            <span class="badge bg-warning text-dark" style="min-width: 130px;">Chưa Thanh Toán</span>
                                        {{/ifEquals}}
                                    {{/ifEquals}}
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="/admin/hoadon/hoadonEdit/{{_id}}" class="btn btn-sm btn-outline-primary">
                                            <i class="lni lni-pencil"></i> Sửa
                                        </a>
                                        <form action="/admin/hoadon/hoadonDelete/{{_id}}?_method=DELETE" method="POST" onsubmit="return confirm('Bạn có chắc chắn muốn xóa hóa đơn này?')">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="lni lni-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </div>
                                </td>
                                <td>
                                    <a href="/admin/hoadon/hoadonView/{{_id}}" class="btn btn-sm btn-outline-info">
                                        <i class="lni lni-eye"></i> Xem Chi Tiết
                                    </a>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>