<style>
    .table td {
        padding: 12px 10px !important;
        vertical-align: middle;
    }
    .input-group:focus-within {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15) !important;
    }
    #customerSearchInput:focus {
        border-color: #dee2e6;
        box-shadow: none;
    }
    /* Giúp ID dài không làm vỡ bảng */
    .text-truncate {
        max-width: 120px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: block;
    }
</style>
<div class="content-wrapper">
    <div class="page-content-wrapper">

        <div class="row mb-3">
            <div class="col-12">
                <h1 class="page-title" style="font-size: 1.8rem; font-weight: 700;">Quản lý Khách Hàng</h1>
                <p class="text-muted small">Danh sách khách hàng thân thiết và lịch sử sửa chữa</p>
            </div>
        </div>

        <div class="row mb-4 align-items-center">
            <div class="col-md-8 col-lg-9">
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="lni lni-search-alt text-muted"></i>
                    </span>
                    <input type="text" id="customerSearchInput" class="form-control border-start-0 ps-0"
                           placeholder="Tìm khách hàng theo tên, số điện thoại hoặc email...">
                </div>
            </div>
            <div class="col-md-4 col-lg-3 text-end">
                <a href="/admin/datamanagement/qlkhachhangCreate" class="btn btn-primary w-100 shadow-sm py-2">
                    <i class="lni lni-plus me-2"></i> Thêm Khách Hàng
                </a>
            </div>
        </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead>
                            <tr>
                                <th scope="col">Ảnh</th>
                                <th scope="col">Tên KH</th>
                                <th scope="col">SDT</th>
                                <th scope="col">Email</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each khachhangs }}
                                <tr>
                                    <td><img src="{{avatarUrl}}" alt="" style="width: auto; height: 50px; border-radius: 5px; object-fit: cover;"></td>
                                    <td>{{namekh}}</td>
                                    <td>{{sdtkh}}</td>
                                    <td>{{email}}</td>
                                    <td>
                                        <a href="/admin/datamanagement/qlkhachhangEdit/{{_id}}  "><button class="btn btn-sm btn-outline-primary"><i class="lni lni-pencil"></i> Sửa</button></a>
                                    </td>
                                    <td>
                                        <form action="/admin/datamanagement/qlkhachhangDelete/{{_id}}?_method=DELETE" method="POST" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa khách hàng này?')">
                                                <i class="lni lni-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="historyModal" tabindex="-1" aria-labelledby="historyModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg"> <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="historyModalLabel">Lịch Sử Sửa Chữa: Lê Lưu Trung Hòa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Khách hàng:</strong> Lê Lưu Trung Hòa</p>
                    <p><strong>SĐT:</strong> 0901234567</p>

                    <h6 class="mt-4">Danh sách các lần sửa chữa:</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                            <tr>
                                <th>Ngày</th>
                                <th>Dịch Vụ / Phụ Tùng</th>
                                <th>Ghi Chú</th>
                                <th>Chi Phí</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>12/11/2025</td>
                                <td>Bảo dưỡng toàn diện</td>
                                <td>Kiểm tra phanh, lọc gió.</td>
                                <td>500.000 VNĐ</td>
                            </tr>
                            <tr>
                                <td>05/10/2025</td>
                                <td>Thay nhớt Motul</td>
                                <td>Thay luôn lọc nhớt.</td>
                                <td>350.000 VNĐ</td>
                            </tr>
                            <tr>
                                <td>15/07/2025</td>
                                <td>Sửa phanh (thay má phanh)</td>
                                <td>Thay má phanh trước.</td>
                                <td>650.000 VNĐ</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
            </div>
        </div>

        <div class="modal fade" id="addCustomerModal" tabindex="-1" aria-labelledby="addCustomerModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addCustomerModalLabel">Thêm Khách Hàng Mới</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="newCustomerForm">
                            <div class="mb-3">
                                <label for="custName" class="form-label">Tên Khách Hàng</label>
                                <input type="text" class="form-control" id="custName" required>
                            </div>
                            <div class="mb-3">
                                <label for="custPhone" class="form-label">Số Điện Thoại</label>
                                <input type="tel" class="form-control" id="custPhone" required>
                            </div>
                            <div class="mb-3">
                                <label for="custEmail" class="form-label">Email (Nếu có)</label>
                                <input type="email" class="form-control" id="custEmail">
                            </div>
                            <div class="mb-3">
                                <label for="custVehicle" class="form-label">Loại Xe (Nếu có)</label>
                                <input type="text" class="form-control" id="custVehicle" placeholder="Ví dụ: Vision, Exciter 150...">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary" form="newCustomerForm">Lưu Khách Hàng</button>
                    </div>
                </div>
            </div>
        </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('customerSearchInput');
        const tableBody = document.getElementById('customerTableBody');
        const rows = tableBody.getElementsByTagName('tr');

        searchInput.addEventListener('keyup', function() {
            const filter = searchInput.value.toLowerCase();
            let hasResult = false;

            for (let i = 0; i < rows.length; i++) {
                // Kiểm tra cột Tên (index 1), SĐT (index 2), Email (index 3)
                const name = rows[i].cells[1] ? rows[i].cells[1].textContent.toLowerCase() : "";
                const phone = rows[i].cells[2] ? rows[i].cells[2].textContent.toLowerCase() : "";
                const email = rows[i].cells[3] ? rows[i].cells[3].textContent.toLowerCase() : "";

                if (name.includes(filter) || phone.includes(filter) || email.includes(filter)) {
                    rows[i].style.display = "";
                    hasResult = true;
                } else {
                    rows[i].style.display = "none";
                }
            }

            // Hiển thị thông báo nếu không tìm thấy
            const existingNoResult = document.getElementById('no-customer-result');
            if (!hasResult) {
                if (!existingNoResult) {
                    const noResultRow = document.createElement('tr');
                    noResultRow.id = 'no-customer-result';
                    noResultRow.innerHTML = `<td colspan="6" class="text-center py-4 text-muted">Không tìm thấy khách hàng phù hợp</td>`;
                    tableBody.appendChild(noResultRow);
                }
            } else if (existingNoResult) {
                existingNoResult.remove();
            }
        });
    });
</script>