<style>
    /* Ép bảng không tràn màn hình và cố định tỷ lệ cột */
    .table {
        table-layout: fixed;
    }
    .table td {
        overflow: hidden;
        text-overflow: ellipsis;
        vertical-align: middle !important;
    }
    /* Hiệu ứng focus cho thanh tìm kiếm */
    #serviceSearchInput:focus {
        border-color: #dee2e6;
        box-shadow: none;
    }
    .input-group:focus-within {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15) !important;
        border-radius: 0.375rem;
    }
</style>
<div class="content-wrapper">
    <div class="page-content-wrapper">

        <div class="row mb-3">
            <div class="col-12">
                <h1 class="page-title" style="font-size: 1.8rem; font-weight: 700;">Quản lý Dịch Vụ</h1>
                <p class="text-muted small">Thiết lập các gói dịch vụ sửa chữa và bảo dưỡng tại tiệm</p>
            </div>
        </div>

        <div class="row mb-4 align-items-center">
            <div class="col-md-8 col-lg-9">
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="lni lni-search-alt text-muted"></i>
                    </span>
                    <input type="text" id="serviceSearchInput" class="form-control border-start-0 ps-0"
                           placeholder="Tìm dịch vụ theo tên hoặc nội dung mô tả...">
                </div>
            </div>
            <div class="col-md-4 col-lg-3 text-end">
                <a href="/admin/datamanagement/qldichvuCreate" class="btn btn-primary w-100 shadow-sm py-2">
                    <i class="lni lni-plus me-2"></i> Thêm Dịch Vụ Mới
                </a>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                        <tr>
                            <th scope="col" style="width: 80px;">Image</th>
                            <th scope="col">Tên Dịch Vụ</th>
                            <th scope="col">Mô Tả Ngắn</th>
                            <th scope="col">Giá Cơ Bản</th>
                            <th scope="col">Sửa</th>
                            <th scope="col">Xóa</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each dichvus}}
                            <tr>

                                <td>
                                    <img src="{{imagedv}}" alt="Ảnh dịch vụ" style="width: auto; height: 50px; border-radius: 5px; object-fit: cover;">
                                </td>

                                <td><strong>{{namedv}}</strong></td>
                                <td>{{motadv}}</td>
                                <td><strong>{{giadv}}</strong></td>
                                <td>
                                    <a href="/admin/datamanagement/qldichvuEdit/{{_id}}  "><button class="btn btn-sm btn-outline-primary"><i class="lni lni-pencil"></i> Sửa</button></a>
                                </td>
                                <td>
                                    <form action="/admin/datamanagement/qldichvuDelete/{{_id}}?_method=DELETE" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa dịch vụ này?')">
                                            <i class="lni lni-trash"></i> Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="serviceModal" tabindex="-1" aria-labelledby="serviceModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg"> <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="serviceModalLabel">Thêm Dịch Vụ Mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="newServiceForm">

                    <div class="mb-3">
                        <label for="serviceName" class="form-label">Tên Dịch Vụ</label>
                        <input type="text" class="form-control" id="serviceName" placeholder="Ví dụ: Thay Nhớt" required>
                    </div>

                    <div class="mb-3">
                        <label for="serviceDescription" class="form-label">Mô Tả Ngắn</label>
                        <textarea class="form-control" id="serviceDescription" rows="4" placeholder="Mô tả ngắn gọn về dịch vụ này, sẽ hiển thị trên website..."></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="serviceIcon" class="form-label">Tên Icon (LineIcons)</label>
                            <input type="text" class="form-control" id="serviceIcon" placeholder="Ví dụ: lni-drop">
                            <small class="form-text">Tra cứu tên icon trên `LineIcons.css` hoặc LineIcons.com.</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="servicePrice" class="form-label">Giá Cơ Bản (VNĐ)</label>
                            <input type="number" class="form-control" id="servicePrice" placeholder="50000" required>
                            <small class="form-text">Để là 0 nếu bạn muốn hiển thị "Báo giá sau".</small>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="submit" class="btn btn-primary" form="newServiceForm">Lưu Dịch Vụ</button>
            </div>
        </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('serviceSearchInput');
        const tableBody = document.getElementById('serviceTableBody');
        const rows = tableBody.getElementsByTagName('tr');

        searchInput.addEventListener('keyup', function() {
            const filter = searchInput.value.toLowerCase().trim();
            let hasResult = false;

            for (let i = 0; i < rows.length; i++) {
                // Tên dịch vụ (cột index 1), Mô tả (cột index 2)
                const name = rows[i].cells[1] ? rows[i].cells[1].textContent.toLowerCase() : "";
                const desc = rows[i].cells[2] ? rows[i].cells[2].textContent.toLowerCase() : "";

                if (name.includes(filter) || desc.includes(filter)) {
                    rows[i].style.display = "";
                    hasResult = true;
                } else {
                    rows[i].style.display = "none";
                }
            }

            // Xử lý khi không có kết quả tìm thấy
            const existingNoResult = document.getElementById('no-service-result');
            if (!hasResult) {
                if (!existingNoResult) {
                    const noResultRow = document.createElement('tr');
                    noResultRow.id = 'no-service-result';
                    noResultRow.innerHTML = `<td colspan="6" class="text-center py-5 text-muted">
                    <i class="lni lni-emoji-sad d-block mb-2" style="font-size: 2rem;"></i>
                    Không tìm thấy dịch vụ nào phù hợp với từ khóa này.
                </td>`;
                    tableBody.appendChild(noResultRow);
                }
            } else if (existingNoResult) {
                existingNoResult.remove();
            }
        });
    });
</script>